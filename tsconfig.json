{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["ES2023"],
    "target": "ES2022",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["src/**/*"]

}